<!DOCTYPE html>
<html>
  <head>
    <title>IgorLuzhansky</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='row mbxxl'>
      <div class='col-md-2 prn'>
        <%= render partial: "shared/nav" %>
      </div>
      <div class='col-md-8 col-sm-8 bwls bss bc-1 pvs'>
        <% if flash[:error] %>
          <div class='c-red'>
            <%= flash[:error] %>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class='c-green'>
            <%= flash[:notice] %>
          </div>
        <% end %>
        <%= yield %>
      </div>
      <div class='col-md-2'>
      </div>
    </div>
    <div class='bottom fixed dvxl bg-4 full-width'>
      <%= render partial: "shared/footer" %>
    </div>
  </body>
</html>